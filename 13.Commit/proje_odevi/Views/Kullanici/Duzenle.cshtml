@model DuzenleKullaniciModel

@{
    ViewData["Title"] = "Doktor Düzenle";
}

<style>
    body {
        background-color: #f0f8ff; /* Açık mavi arkaplan rengi */
    }

    .container {
        margin-top: 50px;
    }

    .card {
        background-color: #fff; /* Beyaz kart arkaplan rengi */
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* Gölgeli efekt */
        padding: 30px;
        text-align: center;
    }

    h1 {
        color: #333; /* Başlık rengi */
        font-size: 36px; /* Başlık font büyüklüğü */
        margin-bottom: 30px;
    }

    label {
        color: #555; /* Etiket rengi */
        font-weight: bold;
        font-size: 18px; /* Etiket font büyüklüğü */
    }

    .form-control {
        border: 1px solid #ddd; /* Form kontrol çerçeve rengi */
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 16px; /* Form kontrol font büyüklüğü */
        text-align: center;
    }

    .form-select {
        border: 1px solid #ddd; /* Dropdown çerçeve rengi */
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 16px; /* Dropdown font büyüklüğü */
        text-align-last: center;
    }

    .text-danger {
        color: #dc3545; /* Hata mesajı rengi */
        font-size: 14px; /* Hata mesajı font büyüklüğü */
    }

    .btn-primary {
        background-color: #007bff; /* Mavi renkli buton */
        border: none;
        border-radius: 8px;
        font-size: 20px; /* Buton font büyüklüğü */
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Hover durumunda buton rengi */
        }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <div class="card shadow">
                <h1 class="display-4">@ViewData["Title"]</h1>

                <form method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                    <div class="mb-4">
                        <label asp-for="AdSoyad" class="form-label">Ad Soyad:</label>
                        <input asp-for="AdSoyad" class="form-control" placeholder="Adınızı Giriniz..." />
                        <span asp-validation-for="AdSoyad" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="KullaniciAdi" class="form-label">Kullanıcı Adı:</label>
                        <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adınızı Giriniz..." />
                        <span asp-validation-for="KullaniciAdi" class="text-danger small"></span>
                    </div>

                    @*<div class="mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Locked" />
                            <label class="form-check-label" asp-for="Locked">Kilit</label>
                        </div>
                    </div>*@

                    <div class="mb-4">
                        <label asp-for="Role" class="form-label">Role:</label>
                        <select asp-for="Role" class="form-select">
                            <option value="">Seçiniz</option>
                            <option value="Admin">Admin</option>
                            <option value="user">Kullanıcı</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Kaydet</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
