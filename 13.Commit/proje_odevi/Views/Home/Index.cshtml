@{
    ViewData["Title"] = "Hastane Randevu Sistemi";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha384-ocevMzGJ6ATB6I9TDH8GGznpn9XZ3DSMDbT4YF86S4x8sXgH/zfZQqZ8i6u5MWLd" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #007bff;
            color: #ffffff;
            padding: 0px;
            text-align: center;
        }

        h1 {
            color: #ffffff;
            font-size: 36px;
        }

        .icon {
            margin-right: 5px;
        }

        main {
            background-color: #f0f8ff;
            padding: 50px;
            text-align: center;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            text-align: center;
        }

        label {
            color: #555;
            font-weight: bold;
            font-size: 18px;
        }

        .form-control {
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 16px;
            text-align: center;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 8px;
            font-size: 20px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <header>
        <i class="fas fa-hospital icon"></i>
        <h1>@ViewData["Title"]</h1>
    </header>

    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-8">
                    <div class="card shadow">
                        <div>
                            <img src="~/uploads/doktor3.webp" alt="En Çok Aranan Numara" class="d-block w-100" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
